<section class="posts-list">
	{% for post in postslist | reverse %}
		<article class="post" {% if post.url == url %} data-current="current item"{% endif %}>
			<p>
				<time datetime="{{ post.date | machineDate }}">
					<small>{{ post.date | readableDate }}</small>
				</time>
			</p>
			<h3>
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>
			<p>
				{{ post.templateContent | safe  }}
			</p>
		</article>
	{% endfor %}
</section>
