<section class="news-list">
	{% for news in newslist | reverse %}
		<article {% if news.url == url %} data-current="current item"{% endif %}>
			<h3>
				<a href="{{ news.url | url }}">
					{% if news.data.title %}
						{{ news.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>
			{% if news.data.summary %}
				<p>
					{{ news.data.summary }}
				</p>
			{% endif %}
			<p>
				<time datetime="{{ news.date | machineDate }}">
					<small>{{ news.date | readableDate }}</small>
				</time>
			</p>
			{% if news.data.tags %}
				<p>
					{% for tag in news.data.tags %}
		  			{%- if tag != "news" -%}
		  				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
		  			<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
		  			{%- endif -%}
					{% endfor %}
				</p>
			{% endif %}
		</article>
	{% endfor %}
</section>
