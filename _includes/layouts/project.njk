---
layout: layouts/base.njk
section: project
---
<article class="project">
  <div class="project-meta">
  <h1>{{ title }}</h1>
  <p>{{ summary }}</p>
  </div>

  <div class="project-body">
    {% for image in images %}
      <figure>
        <img src="{{ image.imgSrc }}">
        <figcaption>{{ image.imgDesc }}</figcaption>
      </figure>
    {% endfor %}
  {{ layoutContent | safe }}

  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "project" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}
  </div>

  <div class="project-nav">
  <a href="{{ '/work/' | url }}">‚Üê All Projects</a>
</div>

</article>
